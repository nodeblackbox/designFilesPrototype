<!DOCTYPE html>
<html>
  <head>
    <title>login for <%=shopName%></title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
    <style>
      .password-container {
        display: inline-block;
        position: relative;
      }
      .toggle-password {
        position: absolute;
        top: 50%;
        right: 10px;
        transform: translate(120%, -50%);
        background: none;
        border: none;
        cursor: pointer;
        font-size: 1.2em;
      }
      .input-group {
        margin-bottom: 10px;
      }
      .input-group label {
        display: block;
        margin-bottom: 5px;
      }
    </style>
  </head>
  <body>
    <h1>login for <%=shopName%></h1>
    <form method="POST" action="/loggedin">
      <div class="input-group">
        <label for="username">Username:</label>
        <input
          id="username"
          type="text"
          name="username"
          placeholder="Username"
          required
          pattern="^[A-Za-z0-9_]{1,20}$"
          title="Only letters, numbers, and underscores are allowed."
        />
      </div>
      <div class="input-group">
        <label for="password">Password:</label>
        <div class="password-container">
          <input
            id="password"
            type="passwords"
            name="password"
            placeholder="Password"
            required
            pattern="^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d@$!%*?&]{8,}$"
            title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters."
          />
          <button
            type="button"
            class="toggle-password"
            onclick="togglePasswordVisibility()"
          >
            üëÅÔ∏è
          </button>
        </div>
      </div>
      <input type="submit" value="Login" />
    </form>

    <script>
      //Move this to a separate  file but document would the script does here
      function togglePasswordVisibility(isRetypeField = false) {
        const passwordField = isRetypeField
          ? document.getElementById("retypePassword")
          : document.getElementById("password");
        passwordField.type =
          passwordField.type === "password" ? "text" : "password";
      }
    </script>
  </body>
</html>
