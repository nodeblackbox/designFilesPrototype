    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const items = document.querySelectorAll(".carousel-item");
        const animationPercent = 100 / items.length;

        // Generate the animation dynamically
        const style = document.createElement("style");
        style.innerHTML = `
                @keyframes slide {
                    ${animationPercent}% {
                        transform: translate(-110%);  /* Account for the added space */
                    }
                    ${animationPercent + 0.01}% {
                        transform: translate(${
                          (items.length - 1) * 110
                        }%);  /* Account for the added space */
                    }
                }
            `;
        document.head.appendChild(style);

        items.forEach((item, index) => {
          item.style.animationDelay = `${-index * (15 / items.length)}s`;
        });
      });
    </script>

    <script>
      const numberOfBalls = 200;

      for (let i = 0; i < numberOfBalls; i++) {
        createBall();
      }

      function createBall() {
        let ball = document.createElement("div");
        ball.classList.add("fuzzy-ball");
        ball.style.left = Math.random() * window.innerWidth + "px";
        ball.style.top = Math.random() * window.innerHeight + "px";
        document.body.appendChild(ball);
        animateBall(ball);
      }

      function animateBall(ball) {
        let angle = Math.random() * 2 * Math.PI;
        let speed = 0.2 + Math.random() * 1;

        function move() {
          let x = parseFloat(ball.style.left);
          let y = parseFloat(ball.style.top);
          let newX = x + Math.cos(angle) * speed;
          let newY = y + Math.sin(angle) * speed;

          if (
            newX < 0 ||
            newX > window.innerWidth ||
            newY < 0 ||
            newY > window.innerHeight
          ) {
            angle = Math.random() * 2 * Math.PI;
          } else {
            ball.style.left = newX + "px";
            ball.style.top = newY + "px";
          }
          requestAnimationFrame(move);
        }
        move();
      }
