<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Website Title</title>
    <style>
      body {
        font-family: "Roboto", sans-serif;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        background-color: #f5f5f5; /* Light grey background */
        color: #333; /* Dark grey text */
      }

      .top-nav-bar,
      .side-nav-bar,
      .hamburger {
        transition: all 0.3s;
      }

      .top-nav-bar {
        background-color: #ffffff; /* White background */
        padding: 10px 15px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: fixed;
        width: 100%;
        top: 0;
        z-index: 1000;
      }

      .logo {
        font-size: 28px;
        font-weight: bold;
        color: #007bff; /* Logo color */
        /* Other styles remain unchanged */
      }

      .nav-links a,
      .login-section a {
        margin: 0 15px;
        text-decoration: none;
        color: #333;
      }

      .side-nav-bar {
        background: #333;
        color: white;
        position: fixed;
        top: 0;
        left: -250px;
        width: 250px;
        height: 100%;
        padding-top: 60px;
        z-index: 999;
      }

      .side-nav-bar a {
        padding: 10px 15px;
        text-decoration: none;
        color: white;
        display: block;
      }

      .side-nav-bar a:hover {
        background-color: #444;
      }

      .hamburger {
        display: none;
        cursor: pointer;
        padding: 15px;
        position: absolute;
        top: 15px;
        left: 15px;
        z-index: 1001;
      }

      .hamburger div {
        width: 30px;
        height: 3px;
        background-color: #333;
        margin: 5px 0;
      }

      .main-content {
        padding-top: 60px;
        margin-left: 0;
      }

      @media (max-width: 768px) {
        .hamburger {
          display: block;
        }

        .top-nav-bar .nav-links,
        .top-nav-bar .login-section {
          display: none;
        }

        .side-nav-bar a {
          margin: 5px 0;
        }
      }
      @media (max-width: 768px) {
        .top-nav-bar .logo {
          position: absolute;
          left: 50%;
          transform: translateX(-50%);
        }

        .top-nav-bar .login-section {
          display: block;
          position: absolute;
          right: 15px;
        }
      }
    </style>
  </head>
  <body>
    <div class="hamburger" onclick="toggleSideNav()">
      <div></div>
      <div></div>
      <div></div>
    </div>

    <nav class="side-nav-bar" id="sideNavBar">
      <a href="#">Home</a>
      <a href="#">Gallery</a>
      <a href="#">About Us</a>
      <a href="#">Contact</a>
    </nav>

    <nav class="top-nav-bar">
      <div class="logo">Your Logo</div>
      <div class="nav-links">
        <a href="#">Home</a>
        <a href="#">Gallery</a>
        <a href="#">About Us</a>
        <a href="#">Contact</a>
      </div>

      <div class="login-section">
        <a href="#">Login</a>
        <a href="#">Profile</a>
      </div>
    </nav>

    <div class="main-content">
      <h1>Welcome to Your Website</h1>
      <p>This is a sample paragraph. Add your content here.</p>
    </div>

    <script>
      function toggleSideNav() {
        var sideNav = document.getElementById("sideNavBar");
        var currentLeft = sideNav.style.left;
        sideNav.style.left = currentLeft === "0px" ? "-250px" : "0";
      }

      window.addEventListener("resize", function () {
        if (window.innerWidth > 768) {
          document.getElementById("sideNavBar").style.left = "-250px";
        }
      });
    </script>
  </body>
</html>
